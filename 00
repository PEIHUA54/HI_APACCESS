            text.className = 'text-muted mb-0';
            text.textContent = 'æœ€è¿‘ 3 å€‹æœˆå…§æ²’æœ‰åŒ¯å‡ºå¸³è™Ÿæ¸…å–®çš„è¨˜éŒ„';
            
            alert.appendChild(icon);
            alert.appendChild(title);
            alert.appendChild(text);
            content.appendChild(alert);
        }

        // âœ… é¡¯ç¤ºéŒ¯èª¤è¨Šæ¯ (DOM æ“ä½œ)
        function displayErrorMessage() {
            var content = document.getElementById('exportRecordsContent');
            content.innerHTML = ''; // æ¸…ç©º
            
            var alert = document.createElement('div');
            alert.className = 'alert alert-danger text-center';
            
            var icon = document.createElement('i');
            icon.className = 'fas fa-times-circle';
            
            alert.appendChild(icon);
            alert.appendChild(document.createTextNode(' è¼‰å…¥å¤±æ•—'));
            content.appendChild(alert);
        }

        // âœ… è¤‡è£½æˆæ¬Šç¢¼ (å¾è¡¨æ ¼)
        function copyCodeFromTable(code, btn) {
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(code).then(function() {
                    updateCopyButton(btn, true);
                    setTimeout(function() {
                        updateCopyButton(btn, false);
                    }, 1500);
                });
            } else {
                var textarea = document.createElement('textarea');
                textarea.value = code;
                textarea.style.position = 'fixed';
                textarea.style.opacity = '0';
                document.body.appendChild(textarea);
                textarea.select();
                
                try {
                    document.execCommand('copy');
                    updateCopyButton(btn, true);
                    setTimeout(function() {
                        updateCopyButton(btn, false);
                    }, 1500);
                } catch (err) {
                    alert('è¤‡è£½å¤±æ•—');
                }
                
                document.body.removeChild(textarea);
            }
        }

        // âœ… æ›´æ–°è¤‡è£½æŒ‰éˆ•ç‹€æ…‹
        function updateCopyButton(btn, isSuccess) {
            var icon = btn.querySelector('i');
            var textNode = btn.childNodes[1]; // ç¬¬äºŒå€‹å­ç¯€é»æ˜¯æ–‡å­—
            
            if (isSuccess) {
                icon.className = 'fas fa-check';
                textNode.nodeValue = ' å·²è¤‡è£½';
                btn.classList.remove('btn-outline-primary');
                btn.classList.add('btn-success');
            } else {
                icon.className = 'fas fa-copy';
                textNode.nodeValue = ' è¤‡è£½';
                btn.classList.remove('btn-success');
                btn.classList.add('btn-outline-primary');
            }
        }
    });
</script>

