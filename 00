            loadingText.textContent = 'è¼‰å…¥ä¸­...';
            
            loadingDiv.appendChild(spinner);
            loadingDiv.appendChild(loadingText);
            content.appendChild(loadingDiv);
            
            loadExportRecords();
        });

        function loadExportRecords() {
            $.ajax({
                url: '@Url.Action("GetExportRecords", "AP")',
                type: 'GET',
                dataType: 'json',
                success: function(response) {
                    if (response.success) {
                        displayRecords(response.records);
                    } else {
                        displayNoRecordsMessage(response.message);
                    }
                },
                error: function() {
                    displayErrorMessage();
                }
            });
        }

        // âœ… ä½¿ç”¨ DOM æ“ä½œå»ºç«‹è¨˜éŒ„è¡¨æ ¼
        function displayRecords(records) {
            var content = document.getElementById('exportRecordsContent');
            content.innerHTML = ''; // æ¸…ç©º
            
            if (!records || records.length === 0) {
                displayNoRecordsMessage('ç›®å‰æ²’æœ‰åŒ¯å‡ºè¨˜éŒ„');
                return;
            }
            
            // å»ºç«‹ table-responsive div
            var tableResponsive = document.createElement('div');
            tableResponsive.className = 'table-responsive';
            
            // å»ºç«‹ table
            var table = document.createElement('table');
            table.className = 'table table-striped table-hover mb-0';
            
            // å»ºç«‹ thead
            var thead = document.createElement('thead');
            thead.className = 'thead-light';
            var headerRow = document.createElement('tr');
            
            var headers = [
                { text: 'åºè™Ÿ', width: '6%', align: 'center' },
                { text: 'æª”æ¡ˆåç¨±', width: '30%', align: 'left' },
                { text: 'æˆæ¬Šç¢¼', width: '15%', align: 'center' },
                { text: 'ç³»çµ±ID', width: '12%', align: 'center' },
                { text: 'åŒ¯å‡ºäººå“¡', width: '12%', align: 'center' },
                { text: 'åŒ¯å‡ºæ™‚é–“', width: '18%', align: 'center' },
                { text: 'æ“ä½œ', width: '7%', align: 'center' }
            ];
            
            headers.forEach(function(header) {
                var th = document.createElement('th');
                th.textContent = header.text;
                th.style.width = header.width;
                if (header.align === 'center') {
                    th.className = 'text-center';
                }
                headerRow.appendChild(th);
            });
            
            thead.appendChild(headerRow);
            table.appendChild(thead);
            
            // å»ºç«‹ tbody
            var tbody = document.createElement('tbody');
            
            records.forEach(function(record, index) {
                var row = document.createElement('tr');
                
                // åºè™Ÿ
                var td1 = document.createElement('td');
                td1.className = 'text-center';
                td1.textContent = (index + 1).toString();
                row.appendChild(td1);
                
                // æª”æ¡ˆåç¨±
                var td2 = document.createElement('td');
                var icon = document.createElement('i');
                icon.className = 'fas fa-file-excel text-success';
                td2.appendChild(icon);
                td2.appendChild(document.createTextNode(' ' + record.FILE_NAME + '.xlsx'));
                row.appendChild(td2);
                
                // æˆæ¬Šç¢¼
                var td3 = document.createElement('td');
                td3.className = 'text-center';
