                code.className = 'auth-code-small';
                code.textContent = record.CODE_GUARD;
                td3.appendChild(code);
                row.appendChild(td3);
                
                // ç³»çµ±ID
                var td4 = document.createElement('td');
                td4.className = 'text-center';
                var badge = document.createElement('span');
                badge.className = 'badge badge-primary';
                badge.textContent = record.SYS_ID;
                td4.appendChild(badge);
                row.appendChild(td4);
                
                // åŒ¯å‡ºäººå“¡
                var td5 = document.createElement('td');
                td5.className = 'text-center';
