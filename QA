namespace HI_APACCESS_DLL_FRAMEWORK.Common
{
    internal static class ErrorCodes
    {
        internal const string SUCCESS = "0000";          // æˆåŠŸ
        internal const string NO_PERMISSION = "0001";    // æŸ¥ç„¡æ¬Šé™
        internal const string TYPE_ERROR = "1002";       // é¡å‹éŒ¯èª¤
        internal const string ENV_ERROR = "1003";        // ç’°å¢ƒéŒ¯èª¤
        internal const string SYS_UNAUTHORIZED = "1004"; // ç³»çµ±æœªæˆæ¬Š
        internal const string SYSTEM_ERROR = "9999";     // ç³»çµ±éŒ¯èª¤
