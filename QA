using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.ComponentModel.DataAnnotations;
using System.Linq;

namespace HI_APACCESS.Models.M_AP_SET
{
    // 群組管理
    public class GroupModel
    {
        public string SYS_ID { get; set; } 

        [Display(Name = "群組編號")]
        public string APG_NO { get; set; }

        [Display(Name = "群組名稱")]
        [Required(ErrorMessage = "群組名稱為必填")]
        public string APG_NAME { get; set; }

        [Display(Name = "主管群編號")]  //主管群組代號
        public string PARENT_APG_NO { get; set; }

        [Display(Name = "建立人員")]
        public string CREATOR { get; set; }

        [Display(Name = "建立日期")]
        public string CREATE_TIME { get; set; }

        [Display(Name = "修改人員")]
        public string EDITOR { get; set; }

        [Display(Name = "修改日期")]
        public string EDIT_TIME { get; set; }
    }

    // 頁面管理
    public class FuncModel
    {
        public string SYS_ID { get; set; } // = "HI_POSIMG";

        [Display(Name = "頁面ID")]
        public string FUNC_ID { get; set; }
        public string FUNC_ID_OLD { get; set; }

        [Display(Name = "頁面名稱")]
        [Required(ErrorMessage = "頁面名稱為必填")]
        public string FUNC_NA { get; set; }

        [Display(Name = "上層ID")]
        [Required(ErrorMessage = "上層ID為必填")]
        public string PARENT_ID { get; set; }

        [Display(Name = "頁面CONTROLLER")]
        public string VIEW_H { get; set; }

        [Display(Name = "頁面VIEW")]
        public string VIEW_HB { get; set; }

        [Display(Name = "排序")]
        public string SORT_NO { get; set; }

        [Display(Name = "是否顯示")]
        public string IS_SHOW { get; set; }

        [Display(Name = "備註")]
        public string MEMO { get; set; }

        [Display(Name = "建立人員")]
        public string CREATOR { get; set; }

        [Display(Name = "建立日期")]
        public string CREATE_TIME { get; set; }

        [Display(Name = "修改人員")]
        public string EDITOR { get; set; }

        [Display(Name = "修改日期")]
        public string EDIT_TIME { get; set; }
    }

    // 按鈕管理
    public class RFuncModel
    {
        public string SYS_ID { get; set; } 

        [Display(Name = "頁面ID")]
        public string FUNC_ID { get; set; }

        [Display(Name = "按鈕序號")]
        public string BTNSEQ { get; set; }

        [Display(Name = "按鈕ID")]
        [Required(ErrorMessage = "按鈕ID為必填")]
        public string BTNID { get; set; }

        [Display(Name = "按鈕名稱")]
        [Required(ErrorMessage = "按鈕名稱為必填")]
        public string BTN_NAME { get; set; }

        [Display(Name = "按鈕CONTROLLER")]
        public string CONTROLLER { get; set; }

        [Display(Name = "按鈕ACTION")]
        public string ACTION { get; set; }

        [Display(Name = "按鈕位置")]
        public string LOC { get; set; }

        [Display(Name = "CLICK觸發事件")]
        public string ONCLICK { get; set; }

        [Display(Name = "建立人員")]
        public string CREATOR { get; set; }

        [Display(Name = "建立日期")]
        public string CREATE_TIME { get; set; }

        [Display(Name = "修改人員")]
        public string EDITOR { get; set; }

        [Display(Name = "修改日期")]
        public string EDIT_TIME { get; set; }
    }

    // 群組人員管理
    public class UserModel
    {
        public string SYS_ID { get; set; } //= "HI_POSIMG";

        [Display(Name = "群組編號")]
        public string APG_NO { get; set; }

        [Display(Name = "群組名稱")]
        public string APG_NAME { get; set; }

        [Display(Name = "員工編號")]
        [Required(ErrorMessage = "員工編號為必填")]
        public string U_ID { get; set; }

        [Display(Name = "員工姓名")]
        [Required(ErrorMessage = "員工姓名為必填")]
        public string U_NAME { get; set; }

        [Display(Name = "建立人員")]
        public string CREATOR { get; set; }

        [Display(Name = "建立日期")]
        public string CREATE_TIME { get; set; }

        [Display(Name = "修改人員")]
        public string EDITOR { get; set; }

        [Display(Name = "修改日期")]
        public string EDIT_TIME { get; set; }
    }

    // 頁面權限管理
    public class FuncPermissionModel
    {
        public string SYS_ID { get; set; } //= "HI_POSIMG";

        [Display(Name = "頁面ID")]
        public string FUNC_ID { get; set; }

        [Display(Name = "頁面名稱")]
        public string FUNC_NA { get; set; }

        [Display(Name = "群組編號")]
        public string APG_NO { get; set; }

        [Display(Name = "群組名稱")]
        public string APG_NAME { get; set; }

        [Display(Name = "建立人員")]
        public string CREATOR { get; set; }

        [Display(Name = "建立日期")]
        public string CREATE_TIME { get; set; }

        [Display(Name = "修改人員")]
        public string EDITOR { get; set; }

        [Display(Name = "修改日期")]
        public string EDIT_TIME { get; set; }
    }

    // 按鈕權限管理
    public class ButtonPermissionModel
    {
        public string SYS_ID { get; set; } //= "HI_POSIMG";

        [Display(Name = "頁面ID")]
        public string FUNC_ID { get; set; }

        [Display(Name = "頁面名稱")]
        public string FUNC_NA { get; set; }

        [Display(Name = "按鈕序號")]
        public string BTNSEQ { get; set; }

        [Display(Name = "按鈕ID")]
        public string BTNID { get; set; }

        [Display(Name = "按鈕名稱")]
        public string BTN_NAME { get; set; }

        [Display(Name = "群組編號")]
        public string APG_NO { get; set; }

        [Display(Name = "群組名稱")]
        public string APG_NAME { get; set; }

        [Display(Name = "建立人員")]
        public string CREATOR { get; set; }

        [Display(Name = "建立日期")]
        public string CREATE_TIME { get; set; }

        [Display(Name = "修改人員")]
        public string EDITOR { get; set; }

        [Display(Name = "修改日期")]
        public string EDIT_TIME { get; set; }
    }

    // 綜合權限設定ViewModel
    public class PermissionSettingViewModel
    {
        public string PARENT_ID { get; set; }

        public string SORT_NO { get; set; }

        [Display(Name = "群組編號")]
        public string APG_NO { get; set; }

        [Display(Name = "群組名稱")]
        public string APG_NAME { get; set; }

        [Display(Name = "頁面ID")]
        public string FUNC_ID { get; set; }

        [Display(Name = "頁面名稱")]
        public string FUNC_NA { get; set; }

        public List<ButtonPermissionItem> ButtonPermissions { get; set; } = new List<ButtonPermissionItem>();

        public bool HasPagePermission { get; set; }
    }

    public class ButtonPermissionItem
    {
        public string BTNSEQ { get; set; }
        public string BTNID { get; set; }
        public string BTN_NAME { get; set; }
        public bool HasPermission { get; set; }
    }


    // 搜尋條件Enum
    public enum SearchType
    {
        nodata,
        GROUP_NAME,
        FUNC_NAME,
        USER_NAME,
        BUTTON_NAME
    }
}
