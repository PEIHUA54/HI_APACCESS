SELECT DISTINCT
    a.BTNID,
    a.BTN_NAME,
    a.CONTROLLER,
    a.ACTION,
    a.LOC AS BtnLocation,
    a.ONCLICK AS BtnOnclick
FROM [HI_TMMAIN].[dbo].[AP_RFUNC] a
INNER JOIN [HI_TMMAIN].[dbo].[AP_USER_RFUNC_CONFIG] b 
    ON a.SYS_ID = b.SYS_ID
   AND a.FUNC_ID = b.FUNC_ID
   AND a.BTNSEQ = b.BTNSEQ
WHERE a.SYS_ID = @SysID 
  AND b.APG_NO = @GroupID
  AND a.FUNC_ID = @FuncID
ORDER BY a.BTNID