using Newtonsoft.Json;
using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Text;

namespace HI_APACCESS_DLL.Models
{
    internal class GetAllUserModel
    {
        public class GetAllUserRequest
        {
            [JsonProperty]
            [DisplayName("系統ID")]
            internal string SysID { get; set; }

            [JsonProperty]
            [DisplayName("環境")]
            internal string Environment { get; set; }
        }

        // 回應結果
        internal class GetAllUserResponse
        {
            [JsonProperty]
            [DisplayName("回覆代碼")]
            internal string Result_code { get; set; }

            [JsonProperty]
            [DisplayName("訊息")]
            internal string Msg { get; set; }

            [JsonProperty("Result")]
            [DisplayName("回覆結果")]
            internal ResultData Result { get; set; }
        }

        public class ResultData
        {
            [JsonProperty]
            public string UserID { get; set; }

            [JsonProperty]
            public string UserName { get; set; }
        }
    }
}
