ä½ èªªå¾—å°ï¼ä¸‰ç¨®æƒ…æ³ç¢ºå¯¦å¯ä»¥åˆä½µæˆä¸€å€‹æ›´æ¸…æ™°çš„æµç¨‹ã€‚è®“æˆ‘é‡æ§‹é€™éƒ¨åˆ†ç¨‹å¼ç¢¼ï¼š

## ä¿®æ”¹å¾Œçš„ SYSController.cs

```csharp
using HI_APACCESS.Factories;
using HI_APACCESS.Models.M_SYS;
using System;
using System.Web.Mvc;

namespace HI_APACCESS.Controllers
{
    public class SYSController : HI_APACCESSBaseController
    {
        private F_SYS F_SYS = new F_SYS();

        // ç”³è«‹ç³»çµ±
        public ActionResult SYS_APPLY()
        {
            return View();
        }

        // å–å¾—å¯ç¶­è­·çš„ç³»çµ±æ¸…å–®
        [HttpPost]
        public JsonResult GetMaintainableSystems()
        {
            try
            {
                var systems = F_SYS.GetMaintainableSystems(Emp_NO);
                return Json(new { success = true, data = systems });
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = "å–å¾—ç³»çµ±æ¸…å–®å¤±æ•—ï¼š" + ex.Message });
            }
        }

        // ç³»çµ±ç”³è«‹(æ–°å¢/ä¿®æ”¹) - é‡æ§‹ç‰ˆ
        [HttpPost]
        public JsonResult ApplySystem(M_SYS_Apply model)
        {
            try
            {
                if (!ModelState.IsValid)
                {
                    return Json(new { success = false, message = "è³‡æ–™é©—è­‰å¤±æ•—" });
                }

                string empNo = Emp_NO;
                string empName = F_SYS.GetEmployeeName(empNo);

                if (string.IsNullOrEmpty(empName))
                {
                    return Json(new { success = false, message = "ç„¡æ³•å–å¾—å“¡å·¥å§“å" });
                }

                // åŸ·è¡Œç³»çµ±ç”³è«‹æµç¨‹
                string result = ProcessSystemApply(model.SYS_ID, model.SYS_NAME, empNo, empName);

                if (result == null || !result.Contains("fail"))
                {
                    return Json(new { success = true, message = "ç³»çµ±ç”³è«‹æˆåŠŸ" });
                }
                else
                {
                    return Json(new { success = false, message = "ç³»çµ±ç”³è«‹å¤±æ•—ï¼š" + result });
                }
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = "ç³»çµ±ç”³è«‹ç™¼ç”ŸéŒ¯èª¤ï¼š" + ex.Message });
            }
        }

        // çµ±ä¸€çš„ç³»çµ±ç”³è«‹è™•ç†æµç¨‹
        private string ProcessSystemApply(string sysId, string sysName, string empNo, string empName)
        {
            string result = null;

            // æ­¥é©Ÿ1: æª¢æŸ¥ç³»çµ±æ˜¯å¦å­˜åœ¨æ–¼ AP_SYS
            bool systemExists = F_SYS.CheckSystemExistsInApSys(sysId);

            if (!systemExists)
            {
                // ç³»çµ±ä¸å­˜åœ¨ -> æ–°å¢ç³»çµ±
                result = F_SYS.InsertSystemToApSys(sysId, sysName, empNo);
                if (result != null && result.Contains("fail")) return result;
            }
            else
            {
                // ç³»çµ±å­˜åœ¨ -> æ›´æ–°ç³»çµ±åç¨±
                result = F_SYS.UpdateSystemName(sysId, sysName, empNo);
                if (result != null && result.Contains("fail")) return result;
            }

            // æ­¥é©Ÿ2: æª¢æŸ¥æ˜¯å¦æœ‰ 001 ç¾¤çµ„
            bool group001Exists = F_SYS.CheckSystemHasGroup001(sysId);

            if (!group001Exists)
            {
                // 001 ç¾¤çµ„ä¸å­˜åœ¨ -> æ–°å¢ 001 ç¾¤çµ„
                result = F_SYS.InsertGroup001(sysId, empNo);
                if (result != null && result.Contains("fail")) return result;
            }

            // æ­¥é©Ÿ3: æª¢æŸ¥ä½¿ç”¨è€…æ˜¯å¦å·²åœ¨ 001 ç¾¤çµ„
            bool userExists = F_SYS.CheckUserInGroup001(sysId, empNo);

            if (!userExists)
            {
                // ä½¿ç”¨è€…ä¸å­˜åœ¨ -> æ–°å¢ä½¿ç”¨è€…åˆ° 001 ç¾¤çµ„
                result = F_SYS.InsertUserToGroup001(sysId, empNo, empName);
                if (result != null && result.Contains("fail")) return result;
            }

            return result;
        }

        // ä¿®æ”¹ç³»çµ±åç¨±
        [HttpPost]
        public JsonResult UpdateSystemName(string sysId, string sysName)
        {
            try
            {
                if (string.IsNullOrEmpty(sysId) || string.IsNullOrEmpty(sysName))
                {
                    return Json(new { success = false, message = "ç³»çµ±IDå’Œç³»çµ±åç¨±ä¸å¯ç‚ºç©º" });
                }

                string result = F_SYS.UpdateSystemName(sysId, sysName, Emp_NO);

                if (result == null || !result.Contains("fail"))
                {
                    return Json(new { success = true, message = "ç³»çµ±åç¨±ä¿®æ”¹æˆåŠŸ" });
                }
                else
                {
                    return Json(new { success = false, message = "ç³»çµ±åç¨±ä¿®æ”¹å¤±æ•—ï¼š" + result });
                }
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = "ä¿®æ”¹ç³»çµ±åç¨±ç™¼ç”ŸéŒ¯èª¤ï¼š" + ex.Message });
            }
        }

        // 2. æ¬Šé™è¨­å®šé é¢
        [HttpGet]
        public ActionResult SYS_PERMISSION_SET()
        {
            return View();
        }

        // å–å¾—å¯ç¶­è­·ç³»çµ±é¸é …(ä¸‹æ‹‰é¸å–®ç”¨)
        [HttpPost]
        public JsonResult GetSystemOptions()
        {
            try
            {
                var options = F_SYS.GetMaintainableSystemOptions(Emp_NO);
                return Json(new { success = true, data = options });
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = "å–å¾—ç³»çµ±é¸é …å¤±æ•—ï¼š" + ex.Message });
            }
        }

        // å°å‘ç¾¤çµ„ç®¡ç†
        [HttpPost]
        public JsonResult RedirectToGroupManagement(string sysId)
        {
            try
            {
                if (string.IsNullOrEmpty(sysId))
                {
                    return Json(new { success = false, message = "è«‹é¸æ“‡ç³»çµ±" });
                }

                // æ›´æ–°Session
                Session["CurrentSystemId"] = sysId;

                return Json(new { success = true, redirectUrl = Url.Action("GroupManagement", "AP", new { systemId = sysId }) });
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = "å°å‘å¤±æ•—ï¼š" + ex.Message });
            }
        }

        // 3. åŠŸèƒ½é é¢è¨­å®šé é¢
        [HttpGet]
        public ActionResult SYS_FUNC_SET()
        {
            return View();
        }

        // å°å‘é é¢ç®¡ç†
        [HttpPost]
        public JsonResult RedirectToPageManagement(string sysId)
        {
            try
            {
                if (string.IsNullOrEmpty(sysId))
                {
                    return Json(new { success = false, message = "è«‹é¸æ“‡ç³»çµ±" });
                }

                // æ›´æ–°Session
                Session["CurrentSystemId"] = sysId;

                return Json(new { success = true, redirectUrl = Url.Action("PageManagement", "AP", new { systemId = sysId }) });
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = "å°å‘å¤±æ•—ï¼š" + ex.Message });
            }
        }
    }
