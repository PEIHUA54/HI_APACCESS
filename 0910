                        <option value="">è«‹é¸æ“‡ç³»çµ±</option>
                    </select>
                    <small class="form-text text-muted">é¸æ“‡ç³»çµ±å¾Œï¼Œå°‡å°å‘è‡³è©²ç³»çµ±çš„ç¾¤çµ„æ¬Šé™ç®¡ç†é é¢</small>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2 text-center">
                <button type="button" class="btn btn-primary btn-lg" id="btnGo">
                    <i class="fas fa-arrow-right"></i> é€²å…¥ç¾¤çµ„ç®¡ç†
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            initPage();
        });

        function initPage() {
            // è¼‰å…¥ç³»çµ±é¸é …
            loadSystemOptions();

            // é€²å…¥æŒ‰éˆ•äº‹ä»¶
            $('#btnGo').off('click').on('click', function () {
                goToGroupManagement();
            });

            // Enter éµå¿«é€Ÿé€²å…¥
            $('#systemSelect').off('keypress').on('keypress', function (e) {
                if (e.which === 13) {
                    goToGroupManagement();
                }
            });
        }

        // è¼‰å…¥ç³»çµ±é¸é …
        function loadSystemOptions() {
            $.ajax({
                url: '@Url.Action("GetSystemOptions", "SYS")',
                type: 'POST',
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        var select = $('#systemSelect');
                        select.empty();
                        select.append('<option value="">è«‹é¸æ“‡ç³»çµ±</option>');

                        if (response.data && response.data.length > 0) {
                            $.each(response.data, function (index, item) {
                                select.append($('<option></option>')
                                    .val(item.SYS_ID)
                                    .text(item.SYS_ID + ' - ' + item.SYS_NAME));
                            });
                        } else {
                            select.append('<option value="">æŸ¥ç„¡å¯ç¶­è­·çš„ç³»çµ±</option>');
                        }
                    } else {
                        alert('è¼‰å…¥ç³»çµ±é¸é …å¤±æ•—ï¼š' + response.message);
                    }
                },
                error: function () {
                    alert('è¼‰å…¥ç³»çµ±é¸é …æ™‚ç™¼ç”ŸéŒ¯èª¤');
                }
            });
        }

        // å°å‘ç¾¤çµ„ç®¡ç†
        function goToGroupManagement() {
            var sysId = $('#systemSelect').val();
            if (!sysId) {
                alert('è«‹é¸æ“‡ç³»çµ±');
                return;
            }

            $.ajax({
                url: '@Url.Action("RedirectToGroupManagement", "SYS")',
                type: 'POST',
                data: { sysId: sysId },
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        window.location.href = response.redirectUrl;
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('å°å‘æ™‚ç™¼ç”ŸéŒ¯èª¤');
                }
            });
        }
    </script>
}
