alert 的那句js:
        let RefreshSession = function () {
            $.post("@Url.Content("~/Account/RefreshSession")").done(function (res) {
                let date = new Date();
                let now = date.getFullYear().toString() + "-" + String(date.getMonth() + 1).padStart(2, 0) + "-" + String(date.getDate()).padStart(2, 0) +
                    " " + String(date.getHours()).padStart(2, 0) + ":" + String(date.getMinutes()).padStart(2, 0) + ":" + String(date.getSeconds()).padStart(2, 0);
                console.log(`${res} - 現在時間: ${now}`);
                if (res === "lost") {
                    clearInterval(hndHeartbeat);
                    alert("資料連線中斷，請重新登入");
                    window.location = "@Url.RouteUrl("Default", ((Route)RouteTable.Routes["Default"]).Defaults)";
                }
            });
        };
