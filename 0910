public List<EmployeeModel> GetEmployeeList(string keyword = "")
{
    string sql = @"
SELECT TOP 1000 
    LTRIM(RTRIM([EMP_NO])) AS [EMP_NO],
    [EMP_NAME], [ORGAN_CAP], [POST_NAME]
FROM [HILIFE_DB3].[DB_SHARE].dbo.[M1EMP_MAST]
WHERE 1=1
";

    List<SqlParameter> parameters = new List<SqlParameter>();

    if (!string.IsNullOrWhiteSpace(keyword))
    {
        sql += @"
 AND (
    LTRIM(RTRIM([EMP_NO])) LIKE @KEYWORD COLLATE Chinese_Taiwan_Stroke_CI_AS
    OR [EMP_NAME] LIKE @KEYWORD COLLATE Chinese_Taiwan_Stroke_CI_AS
 )";
        parameters.Add(new SqlParameter("@KEYWORD", $"%{keyword}%"));
    }

    sql += " ORDER BY [EMP_NO]";

    DataTable dt = SVS_DBmanager.QueryBySQL(sql, parameters);
    return SVS_DBmanager.ConvertToList<EmployeeModel>(dt);
}