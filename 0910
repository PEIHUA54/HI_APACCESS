<div class="container-fluid">
    <div class="system-select-container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="form-group">
                    <label for="systemSelect">可維護的系統 <span class="text-danger">*</span></label>
                    <select class="form-control" id="systemSelect">
                        <option value="">請選擇系統</option>
                    </select>
                    <small class="form-text text-muted">選擇系統後，將導向至該系統的群組權限管理頁面</small>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2 text-center">
                <button type="button" class="btn btn-primary btn-lg" id="btnGo">
                    <i class="fas fa-arrow-right"></i> 進入群組管理
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            initPage();
        });

        function initPage() {
            // 載入系統選項
            loadSystemOptions();

            // 進入按鈕事件
            $('#btnGo').off('click').on('click', function () {
                goToGroupManagement();
            });

            // Enter 鍵快速進入
            $('#systemSelect').off('keypress').on('keypress', function (e) {
                if (e.which === 13) {
                    goToGroupManagement();
                }
            });
        }

        // 載入系統選項
        function loadSystemOptions() {
            $.ajax({
                url: '@Url.Action("GetSystemOptions", "SYS")',
                type: 'POST',
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        var select = $('#systemSelect');
                        select.empty();
                        select.append('<option value="">請選擇系統</option>');

                        if (response.data && response.data.length > 0) {
                            $.each(response.data, function (index, item) {
                                select.append($('<option></option>')
                                    .val(item.SYS_ID)
                                    .text(item.SYS_ID + ' - ' + item.SYS_NAME));
                            });
                        } else {
                            select.append('<option value="">查無可維護的系統</option>');
                        }
                    } else {
                        alert('載入系統選項失敗：' + response.message);
                    }
                },
                error: function () {
                    alert('載入系統選項時發生錯誤');
                }
            });
        }

        // 導向群組管理
        function goToGroupManagement() {
            var sysId = $('#systemSelect').val();
            if (!sysId) {
                alert('請選擇系統');
                return;
            }

            $.ajax({
                url: '@Url.Action("RedirectToGroupManagement", "SYS")',
                type: 'POST',
                data: { sysId: sysId },
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        window.location.href = response.redirectUrl;
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('導向時發生錯誤');
                }
            });
        }
    </script>
}
